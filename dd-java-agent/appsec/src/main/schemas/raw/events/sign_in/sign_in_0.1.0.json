{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$id": "https://appsec-schema.datadoghq.com/jsonschema/raw/events/sign_in/0.1.0.json",
  "properties": {
    "event_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string",
      "const": "appsec.authentication.sign_in",
      "description": "[INDEXED]"
    },
    "event_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "detected_at": {
      "type": "string",
      "format": "date-time",
      "description": "[INDEXED]"
    },
    "is_successful": {
      "type": "boolean"
    },
    "user": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "description": "An internal identifier for the principal.",
          "$comment": "Previously `sqreen_identifier`: b64(json(identifiers)) or sha512(b64(json(identifiers))) if too long."
        },
        "identifiers": {
          "type": [
            "object",
            "null"
          ],
          "patternProperties": {
            "^.+$": {
              "type": "string"
            }
          }
        }
      }
    },
    "context": {
      "allOf": [
        {
          "$ref": "../../contexts/_definitions/all_context.json"
        },
        {
          "title": "Required context",
          "required": [
            "actor",
            "service",
            "service_stack",
            "span",
            "trace",
            "tracer"
          ]
        }
      ]
    }
  },
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "detected_at",
    "is_successful",
    "user",
    "context"
  ]
}
