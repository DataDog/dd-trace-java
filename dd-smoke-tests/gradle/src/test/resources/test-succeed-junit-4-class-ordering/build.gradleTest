apply plugin: 'java'

repositories {
  mavenLocal()

  def proxyUrl = System.getenv("MAVEN_REPOSITORY_PROXY")
  if (proxyUrl) {
    println "Using proxy repository: $proxyUrl"
    maven {
      url = proxyUrl
    }
  }

  mavenCentral()
}

dependencies {
    testImplementation 'junit:junit:4.13.2'
}

test {
    useJUnit()
    environment "DD_CIVISIBILITY_TEST_ORDER", "FAILFAST"
}
