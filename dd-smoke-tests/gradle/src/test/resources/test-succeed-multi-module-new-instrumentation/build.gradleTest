subprojects {
    apply plugin: 'java'

    repositories {
        mavenLocal()

        def proxyUrl = System.getenv("MAVEN_REPOSITORY_PROXY")
        if (proxyUrl) {
          println "Using proxy repository: $proxyUrl"
          maven {
            url = proxyUrl
            allowInsecureProtocol = true
          }
        }

        mavenCentral()
    }

    dependencies {
        testImplementation 'junit:junit:4.10'
    }
}
